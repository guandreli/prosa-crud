<%= form_for(@cadastro, html: { class: "basic-grey" }) do |f| %>
  <% if @cadastro.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@cadastro.errors.count, "error") %> erros ocorreram:</h2>

      <ul>
      <% @cadastro.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h1><%= "Cadastro" %></h1>


  <div class="field">
    <%= f.label :nome %><br>
    <%= f.text_field :nome %>
  </div>
  <div class="field">
    <%= f.label :descricao %><br>
    <%= f.text_area :descricao %>
  </div>
  <div class="field">
    <%= f.label :valor %><br>
    <%= f.text_field :valor %>
  </div>
  <div class="field-date">
    <%= f.label :inicio %><br>
    <%= f.date_field :inicio %>
  </div>
  <div class="field-date">
    <%= f.label :fim %><br>
    <%= f.date_field :fim %>
  </div>
  <div class="field">
    <%= f.label :cidade %><br>
    <%= f.text_field :cidade %>
  </div>
  <div class="actions" align="center">
    <%= f.submit 'Salvar', class: "btn btn-success" %>
    <%= link_to 'Voltar', cadastros_path, class: "btn btn-danger" %>
  </div>
<% end %>
