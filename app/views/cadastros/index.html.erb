<div class="table-responsive">
  
  <script type="text/javascript">
    $.notify("<%= notice %>", "success");
  </script>

  <h1>Cadastros</h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Descricao</th>
        <th>Valor</th>
        <th>Inicio</th>
        <th>Fim</th>
        <th>Cidade</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @cadastros.each do |cadastro| %>
        <tr>
          <td><%= cadastro.nome %></td>
          <td><%= cadastro.descricao %></td>
          <td><%= cadastro.valor %></td>
          <td><%= l cadastro.inicio %></td>
          <td><%= l cadastro.fim %></td>
          <td><%= cadastro.cidade %></td>
          <td><%= link_to 'Editar', edit_cadastro_path(cadastro), class: 'btn btn-warning' %></td>
          <td><%= link_to 'Apagar', cadastro, method: :delete, data: { confirm: 'Tem certeza' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Novo Cadastro', new_cadastro_path, class: 'btn btn-primary' %>
</div>